<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <RootNamespace>certexp</RootNamespace>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>certexp</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <Version>1.1.0</Version>
    <Title>Certificate Export Utility</Title>
    <Authors>mubix</Authors>
    <Description>
      Dotnet tool to export certificates as base64 string
    </Description>
    <PackageReleaseNotes>
      - move to dotnet core 3.0
      - change project type to dotnet tool
      - add package metadata
    </PackageReleaseNotes>
    <RepositoryUrl>https://github.com/mubix/certexp</RepositoryUrl>
    <PackageProjectUrl>https://github.com/mubix/certexp</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/mubix/certexp/blob/master/LICENSE</PackageLicenseUrl>
  </PropertyGroup>
</Project>